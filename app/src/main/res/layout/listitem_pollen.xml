<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="70dp"
    android:layout_margin="20dp"
    android:id="@+id/rl_item_Pollen"
    >
    <ImageView
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:id="@+id/iv_item_Pollen"/>
    <View
        android:id="@+id/myRectangleView_Pollen"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:background="@drawable/rectangle"/>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/myRectangleView_Pollen"
        android:background="#55FFFFFF">
        <TextView
            android:id="@+id/txt_name_Pollen"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Polle"
            android:layout_above="@id/txt_currentValue_Pollen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_currentValue_Pollen"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar_Pollen"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="190dp"
            android:layout_height="5dp"
            android:layout_marginStart="5dp"
            android:progressDrawable="@drawable/progressbar_heat"
            android:layout_centerVertical="true"
            android:layout_below="@id/txt_currentValue" />

    </LinearLayout>


</RelativeLayout>
